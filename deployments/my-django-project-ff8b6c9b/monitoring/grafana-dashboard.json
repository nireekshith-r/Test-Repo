{
  "dashboard": {
    "title": "My-django-app Monitoring",
    "panels": [
      {
        "type": "row",
        "title": "Overview"
      },
      {
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "my_django_app:request_rate",
            "legendFormat": "Request Rate"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "my_django_app:error_rate / my_django_app:request_rate * 100",
            "legendFormat": "Error Rate (%)"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Latency P99",
        "targets": [
          {
            "expr": "my_django_app:latency:p99",
            "legendFormat": "P99 Latency"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Active Pods",
        "targets": [
          {
            "expr": "count(kube_pod_status_ready{app='My-django-app', condition='true'})",
            "legendFormat": "Active Pods"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)"
        },
        {
          "name": "pod",
          "type": "query",
          "query": "label_values(kube_pod_info{namespace='$namespace'}, pod)"
        }
      ]
    }
  }
}